.tag-cloud
  &-list
    a
      display: inline-block
      padding: 0 1rem 0 .4rem
      transition: all .3s
      position: relative

      &:hover
        color: $text-hover !important
        transform: scale(1.1)

      +maxWidth768()
        zoom: .85

  &-title
    font-size: 2em

    +maxWidth768()
      font-size: 1.5em
