#page
  .category-lists
    .category-title
      font-size: 2em

      +maxWidth768()
        font-size: 1.5em
        
    .category-list
      a
        color: var(--font-color)
        font-size: 1.2em
        line-height: 1.7;

        &:hover
          color: $text-hover

      .card-category-list-icon
        width: 1.6em
        height: 1.6em
        vertical-align: -0.4em
        margin-right: .6rem

      .category-list-count
        color: $theme-meta-color
        font-size: 14px

        &:before
          content: '（'

        &:after
          content: '）'

    ul
      list-style: none
      counter-reset: li

      li
        position: relative
        margin: .8rem 0
        padding: .4rem .8rem
        box-shadow: 0 0 5px rgba(0, 0, 0, .1)
        border-radius: 5px
        
        &:hover
          &:before
            border-color: $pseudo-hover

      ul
        display: flex;
        flex-wrap: wrap;

        .category-list-item
          display: flex
          flex-direction: column
          align-items: center
          width: 16.66%
          box-shadow: none
          margin: .4rem 0
          padding: 0

          +maxWidth768()
            width: 33.33%

          .card-category-list-icon
              width: 3.6em
              height: 3.6em
              margin-right: 0;

              +maxWidth768()
                width: 3em
                height: 3em

          .category-list-link
            display: flex
            flex-direction: column
            align-items: center


