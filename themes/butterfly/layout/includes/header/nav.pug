nav#nav
  span#blog_name
    a#site-name.site-page(href=url_for('/'))
      if theme.home_page
        i.fa-fw(class=theme.home_page.split('||')[1])
        span=' '+theme.home_page.split('||')[0]
  span#menus
    if (theme.algolia_search.enable || theme.local_search.enable)
      #search_button
        a.site-page.social-icon.search
          i.fas.fa-search.fa-fw
          span=' '+_p('search')
    !=fragment_cache('menus', function(){return partial('includes/header/menu_item')})

    span#toggle-menu.close
      a.site-page
        i.fas.fa-bars.fa-fw


